<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.lastname %></td>
    <td><%= user.email %></td>
    <td><%= User.phones[user.phone_id] %></td>
    <td><%= user.total %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', admin_edita_path(user.id) %></td>
    <td><%= link_to 'Destroy', admin_borrar_path(user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

